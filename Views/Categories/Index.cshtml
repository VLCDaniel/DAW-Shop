
<h1>@ViewBag.Message</h1>
<h2>Lista categorii</h2>

<a class="btn btn-primary" href="Categories/New">Adauga categorie</a>
<br />

@foreach (var category in ViewBag.Categories)
{
    <div class="panel panel-default">
        <div class="panel-heading">@category.CategoryName</div>
        <div class="panel-body">
            Articole
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn btn-success" href="/Categories/Show/@category.CategoryId">Afisare categorie</a>
        </div>
    </div>
}

