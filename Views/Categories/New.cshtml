@model Shopping_Site.Models.Category

@{
    ViewBag.Title = "New";
}

<h2>Adaugare categorie</h2>

<form method="post" action="/Categories/New">

    @Html.Label("CategoryName", "Titlu Categorie")
    <br />
    @Html.EditorFor(m => m.CategoryName, new { htmlAttributes= new { @class = "form-control" } })
    <br /><br />

    <button type="submit">Adauga categorie</button>
</form>