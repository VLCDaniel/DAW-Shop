@model Shopping_Site.Models.Category

<form method="post" action="/Categories/Edit/@Model.CategoryId">
    
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("CategoryId")

    @Html.Label("CategoryName", "Titlu Categorie")
    <br />
    @Html.EditorFor(m => m.CategoryName)
    <br />


    <button class="btn btn-success" type="submit">Modifica categorie</button>
</form>