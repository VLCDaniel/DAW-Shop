<style>
    .panel{
        padding:0;
        margin-left:0;
    }
    .panel-footer{
        display:flex;
        justify-content:space-between
    }
</style>
<h1>@ViewBag.Message</h1>
<h2>Lista categorii</h2>

<a class="btn btn-primary" href="/Categories/New">Adauga categorie</a>
<br />
<br />

@foreach (var category in ViewBag.Categories)
{
    <div class="panel panel-default">
        @*<div class="panel-heading">@category.CategoryName</div>*@
        <div class="panel-footer">
            <b>@category.CategoryName </b>  <a class="btn btn-sm btn btn-success" href="/Categories/Show/@category.CategoryId">Afisare categorie</a>
        </div>
    </div>
}

