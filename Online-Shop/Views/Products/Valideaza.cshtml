@model IEnumerable<Shopping_Site.Models.Product>
@{
    ViewBag.Title = "Valideaza";
}

<h2>Valideaza</h2>
<p>@TempData["message"]</p>
<br />
<div>
    <ul class="list-unstyled" style="display:flex">

        @if (Model.Count() == 0)
        {
            <h1>Nu exista produse care asteapta sa fie validate</h1>
        }
        @foreach (var product in Model)
        {
            <li>
                <div class="list-group-item" style="margin-right:1em;padding:2em">
                    <h2 style="margin-top:0;margin-bottom:1em"><a href="/Products/Show/@product.ID">@product.Name</a></h2>
                    <p>Postat de : @product.User.Email</p>
                    <form method="post" action="/Products/Valideaza/@product.ID">
                        @Html.HttpMethodOverride(HttpVerbs.Put)
                        <button type="submit" class="btn btn-success"> Valideaza </button>

                    </form>
                </div>
            </li>
        }
    </ul>
</div>